{% liquid
  assign object_selector = '#shopify-section-' | append: section.id
  assign mobile_crop = 'mobile-banner-crop-' | append: section.settings.mobile_image_crop
  assign mobile_text_alpha = section.settings.mobile_text_color | default: 'rgba(0,0,0,0)' | color_extract: 'alpha'
  assign lazyload = true

  if section.index0 < 2
    assign lazyload = false
  endif
%}

<style>
    #banner-{{ section.id }} .extra-icons  {
margin-top:2rem;
  }
  #banner-{{ section.id }} .extra-icons img {
width:450px;
  }
    #banner-{{ section.id }} .extra-icons img.mobileIcons {
    display:none;
  }
  {%
    render 'css-loop',
    css: section.settings.custom_css,
    id: section.id
  %}

  /* ────────────────────────────────────────────────────────
     Limit banner image height on desktop, keep aspect ratio
  ──────────────────────────────────────────────────────── */
  {{ object_selector }} .banner .image-element img {
    max-height: 100px;     /* ↓ adjust this value as needed */
    width: 100px;           /* maintain aspect ratio */
    object-fit: cover;     /* crop if it’s too tall */
  }

  {% if section.settings.mobile_text_below_image and mobile_text_alpha != 0 %}
    @media only screen and (max-width: 200px) {
      {{ object_selector }} .pretext,
      {{ object_selector }} .headline,
      {{ object_selector }} .subtitle {
        color: {{ section.settings.mobile_text_color }};
      }
    }
  {% endif %}
  
  @media screen and (max-width: 480px) {
  {{ object_selector }} .is-hidden-desktop-only img {
    max-height: 250px; /* Adjust as needed */
    object-fit: cover;
    width: 100%;
    height: auto;
    
  }

  /* replace “.global-button” with whatever actual class your CTA has */
 #banner-{{ section.id }} .global-button {
    display: block !important;
    width: 140% !important;
   height : 100%;
    padding: .75rem 1.5rem !important;
    position: relative !important;
    left: 50% !important;
    transform: translateX(-50%) !important;
    margin: 0 !important;  /* reset any old auto-margins */
  }


      #banner-{{ section.id }} .banner-buttons .global-button {
    width: 150% !important;
    max-width: none !important;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

    #banner-{{ section.id }} .reviews-text {
      color: #000 !important;
    }

  /* center all of the text blocks */
  #banner-{{ section.id }} .caption-content {
    text-align: center !important;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  /* center the stars + review count */
  #banner-{{ section.id }} .section-reviews {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
    flex-direction:column;
  }

  /* center the button row (if you have banner-buttons under mobile) */
  #banner-{{ section.id }} .banner-buttons {
    display: flex;
    justify-content: center;
    width:80%;
  }

  /* center your three icons */
  #banner-{{ section.id }} .extra-icons {
    justify-content: center !important;
    
  }
      #banner-{{ section.id }} .extra-icons img {

    
  }
  #banner-{{ section.id }} .extra-icons img.desktopIcons {
    display:none;
  }
        #banner-{{ section.id }} .extra-icons img.mobileIcons {
    display:block;
  }
        #banner-{{ section.id }} .extra-icons  {
margin-top:1rem;
  }
}




</style>


<section
  id="banner-{{ section.id }}"
  class="
    section
    {% if section.settings.wide_display == false %}
      is-width-standard
    {% else %}
      is-width-wide
      has-no-side-gutter
    {% endif %}
    full-width--{{ section.settings.wide_display }}
    caption-background-{{ section.settings.caption_content_background }}
    caption--below-{{ section.settings.mobile_text_below_image }}
    {{ section.settings.css_class }}
  "
>
  <div class="container">
    <div
      class="
        one-whole
        column
        banner
      "
    >
      {% if section.settings.mobile_image %}
        <div class="is-hidden-mobile-only">
      {% endif %}

      {% if section.settings.image %}
        {%
          render 'image-element',
          image: section.settings.image,
          alt: section.settings.image.alt,
          stretch_width: true,
          focal_point: section.settings.image.presentation.focal_point,
          lazyload: lazyload,
        %}

        {% if section.settings.caption_content_background == 'darken_bg' %}
          <div class="darken-bg"></div>
        {% endif %}
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg placeholder-svg--banner' }}
      {% endif %}

      {% if section.settings.mobile_image %}
        </div>
        <div class="is-hidden-desktop-only">
          {%
            render 'image-element',
            image: section.settings.mobile_image,
            alt: section.settings.mobile_image.alt,
            stretch_width: true,
            focal_point: section.settings.mobile_image.presentation.focal_point,
            additional_classes: mobile_crop,
            lazyload: lazyload,
          %}

          {% if section.settings.caption_content_background == 'darken_bg' %}
            <div class="darken-bg"></div>
          {% endif %}
        </div>
      {% endif %}

      {% unless section.settings.button1_link != blank and section.settings.button2_link != blank %}
        {% if section.settings.button1_link != blank and section.settings.button1 == blank %}
          <a href="{{ section.settings.button1_link }}" class="banner-full-link">
            {{ section.settings.button1 }}
          </a>
        {% endif %}

        {% if section.settings.button2_link != blank and section.settings.button2 == blank %}
          <a href="{{ section.settings.button2_link }}" class="banner-full-link">
            {{ section.settings.button2 }}
          </a>
        {% endif %}
      {% endunless %}

      {% unless section.settings.pretext == blank and section.settings.title == blank and section.settings.subtitle == blank and section.settings.button1 == blank and section.settings.button2 == blank %}
        <div
          class="
            position-{{ section.settings.text_position }}
            caption
            js-caption
          "
        >
          <div class="caption-content align-{{ section.settings.text_align }}">
            {% if section.settings.show_stars or section.settings.show_review_text %}
              <div class="section-reviews">
                {% if section.settings.show_stars %}
                  <div class="interactive-stars" data-initial-rating="5"></div>
                {% endif %}
                {% if section.settings.show_review_text %}
                  <p class="reviews-text">{{ section.settings.review_count_text }}</p>
                {% endif %}
              </div>
            {% endif %}

            {% if  section.settings.pretext != blank %}
              <div class="pretext">
                {{  section.settings.pretext }}
              </div>
            {% endif %}

            {% if section.settings.title != blank %}
              <h1 class="headline">
                {{ section.settings.title | escape }}
              </h1>
            {% endif %}

            {% if section.settings.subtitle != blank %}
              <div class="subtitle">
                {{ section.settings.subtitle }}
              </div>
            {% endif %}

            {%
              render 'banner-buttons',
              button1_text: section.settings.button1,
              button1_style: section.settings.button1_style,
              button1_link: section.settings.button1_link,
              button2_text: section.settings.button2,
              button2_style: section.settings.button2_style,
              button2_link: section.settings.button2_link,
              mobile_text_below_image: section.settings.mobile_text_below_image,
              mobile_text_color: section.settings.mobile_text_color,
              object_selector: object_selector,
            %}
            {% if section.settings.show_extra_icons %}
              <div class="extra-icons">
                <img class="desktopIcons" src="https://cdn.shopify.com/s/files/1/0766/1840/0065/files/IconBanner_yellow.png?v=1751218734"/>
                <img class="mobileIcons" src="https://cdn.shopify.com/s/files/1/0766/1840/0065/files/IconBanner.png?v=1696884185"/>
              </div>
            {% endif %}
          </div>
        </div>
      {% endunless %}
    </div>
  </div>
</section>
<script>
  function createInteractiveStars(callback, maxStars = 5) {
    const container = document.createElement('div');
    const stars = [];

    for (let i = 0; i < maxStars; i++) {
      const star = document.createElement('span');
      star.textContent = '☆';
      container.appendChild(star);
      stars.push(star);

      star.addEventListener('mouseover', () => {
        for (let j = 0; j < maxStars; j++) {
          stars[j].textContent = j <= i ? '★' : '☆';
        }
      });

      star.addEventListener('mouseout', () => {
        for (let j = 0; j < maxStars; j++) {
          stars[j].textContent = '★';
        }
        stars[maxStars].textContent = '⯨';
      });

      star.addEventListener('click', () => {
        callback(i + 1);
      });
    }

    return container;
  }

document.addEventListener('DOMContentLoaded', function () {
  document.querySelectorAll('.interactive-stars').forEach(function (el) {
    if (el.querySelector('span')) return;

    const rating = parseInt(el.dataset.initialRating || '0', 10);
    const stars = createInteractiveStars(function () {
    });

    el.appendChild(stars);

    const spans = el.querySelectorAll('span');
    for (let i = 0; i < rating; i++) {
      spans[i].textContent = '★';
    }
  });
});

</script>

