<section id="customer-reviews" class="section--customer-reviews">
  <div class="page-width">
    <div class="section-header text-center">
      <h2>{{ section.settings.heading }}</h2>
      {% if section.settings.link_text != blank %}
        <a href="{{ section.settings.link_url }}" class="reviews-link">
          {{ section.settings.link_text }}
        </a>
      {% endif %}
    </div>

    <div class="reviews-grid">
      {% for block in section.blocks %}
        <div class="review-card">
          <div class="stars">
            {% for i in (1..block.settings.rating) %}
              <span class="star">★</span>
            {% endfor %}
          </div>
          <p class="review-text">{{ block.settings.text }}</p>
          <p class="reviewer">
            <strong>{{ block.settings.reviewer | strip}}</strong>
            {% if block.settings.subtitle != blank %}, {{ block.settings.subtitle }}{% endif %}
          </p>
        </div>
      {% endfor %}
    </div>
  </div>
  <style>
/* Container centering & bottom padding */
.section--customer-reviews {
  max-width: 1400px;
  margin: 0 auto;     /* already there, but just in case */
  padding: 0 1rem;     /* give it some breathing room on the sides */
}

/* mobile: single-column stack */
.section--customer-reviews .reviews-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
  margin-top: 2rem;
}

/* desktop: horizontal, no wrap, scrollable */
@media (min-width: 768px) {
  .section--customer-reviews .reviews-grid {
    display: flex;
    flex-wrap: nowrap;
    justify-content: center;  /* center the row */
    gap: 2rem;
    overflow-x: auto;
    padding-bottom: 1rem;
  }

  .section--customer-reviews .review-card {
    /* start at 380px, but allow shrinking & growing */
    flex: 1 1 380px;
    /* remove fixed width */
    width: auto;
    /* optional cap so cards don't get massive */
    max-width: 380px;
  }
}

/* make the shadow more pronounced */
.section--customer-reviews .review-card {
  background: #fff;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 20px 40px rgba(0,0,0,0.1);  /* deeper shadow */
  text-align: center;
}

/* rest of your styles */
.section--customer-reviews .star {
  color: #ffc107;
  font-size: 1.25rem;
  margin: 0 .1rem;
}

.section--customer-reviews .review-text {
  margin: 1rem 0;
  line-height: 1.5;
}

.section--customer-reviews .reviewer {
  color: #2a2aeb;
  font-weight: 500;
}

.section--customer-reviews .section-header h2 {
  font-size: 2rem;
  margin-bottom: .25rem;
}

.section--customer-reviews .reviews-link {
  font-size: .9rem;
  text-decoration: underline;
  color: #333;
}
  </style>

